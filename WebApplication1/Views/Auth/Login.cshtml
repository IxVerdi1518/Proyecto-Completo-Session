@model Usuario
@{
    ViewData["Title"] = "Login";
}

<h1>Ingresa tus credenciales</h1>

<!DOCTYPE html>
<html>
    <head>
        <title>Ingresar</title>
    </head>
    <body>
    <main class="w-100 m-auto" style="max-width: 300px; padding:5px">
            <form asp-controller="Auth" asp-action="Login" method="post">
            <img class="mb-4" src="https://aka-cdn.uce.edu.ec/ares/tmp/logo3.png" alt="" width="72" height="57">
                <h1 class="h3 mb-3 fw-normal">Ingresar</h1>

                <div class="form-floating">
                  <input type="email" asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com">
                  <label for="floatingInput">Correo Electronico</label>
                </div>
                <br />
                <div class="form-floating">
                  <input type="password" asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password">
                  <label for="floatingPassword">Contraseña</label>
                </div>

                <div class="checkbox mb-3">
                  <label>
                    <input type="checkbox" value="remember-me" asp-for="KeepLogeedIn"> Remember me
                  </label>
                </div>
                <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
                  @if (ViewData["ValidateMessage"] != null)
                {
                    <br />                
                    <br />                
                    <br />
                    <p class="mt-5 mb-3 text-muted">@ViewData["ValidateMessage"]</p>
                }
              </form>
        </main>
    </body>
</html>

@model Cliente
@{
    ViewData["Title"] = "Crear Clientes";
}

<div class="contairner">
    <h3>
        Editar Cliente 
    </h3>
    <br />
</div>


<div class="contairner">
    <div class="row">
        <div class="col-sm-8">
            <form method="post" asp-controller="Cliente" asp-action="Update">
                <div class="form-group">
                    <label asp-for="Identificacion" class="control-label"></label>
                    <input asp-for="Identificacion" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Nombres" class="control-label"></label>
                    <input asp-for="Nombres" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Apellidos" class="control-label"></label>
                    <input asp-for="Apellidos" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Edad" class="control-label"></label>
                    <input asp-for="Edad" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Pais"></label>
                    <select class="form-control" asp-for="Pais" asp-items="ViewBag.Pais">
                        <option disabled selected value="">Select a Pais</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>